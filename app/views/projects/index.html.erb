
<div class="container-projects">
  <div class="row row-cols-1 row-cols-md-3 g-3">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card shadow">
          <%= link_to image_tag(project.photo_url, :class=>"project_image"), project%>
        </div>
      </div>
    <% end %>
  </div>
</div>
