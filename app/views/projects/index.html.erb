
<div class="container-projects">
  <div class="row row-cols-1 row-cols-md-3 g-3">
    <% @projects.each do |project| %>
      <div class="col">
        <div class="card shadow card-index"
             data-controller="card"
             data-action="mouseenter->card#readtitle">
             <%= link_to image_tag(project.photo_url, :class=>"project_image"), project %>
            <div class="content">
              <div class = "title d-none"
                  data-card-target="titles">
                  <%= project.name %>
              </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
